# GameForge Production Database Configuration Template
# Copy this file to .env.production and update values for your production environment
# DO NOT commit .env.production to version control

# Production Database Connection
DATABASE_URL=postgresql://gameforge_user:CHANGE_THIS_PASSWORD@prod-host:5432/gameforge_prod
DB_HOST=prod-host.example.com
DB_PORT=5432
DB_NAME=gameforge_prod
DB_USER=gameforge_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Connection Pool Settings (Production Optimized)
DB_POOL_SIZE=50
DB_POOL_TIMEOUT=60
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# SSL Settings (Production - Required)
DB_SSL_MODE=require
DB_SSL_CERT_PATH=/path/to/client-cert.pem
DB_SSL_KEY_PATH=/path/to/client-key.pem
DB_SSL_CA_PATH=/path/to/ca-cert.pem

# Query and Performance Settings (Production)
DB_ECHO=false
DB_QUERY_TIMEOUT=60
DB_STATEMENT_TIMEOUT=120000

# Migrations
MIGRATE_URL=postgresql://gameforge_user:CHANGE_THIS_PASSWORD@prod-host:5432/gameforge_prod
MIGRATE_AUTO_RUN=false

# Backup Settings (Production)
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=gameforge-prod-backups
BACKUP_S3_PREFIX=gameforge-prod/

# Monitoring and Logging (Production)
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=500

# Security (Production)
DB_ENCRYPT_AT_REST=true
DB_AUDIT_ENABLED=true
DB_MAX_CONNECTIONS_PER_USER=5

# Environment
ENVIRONMENT=production
DEBUG_MODE=false