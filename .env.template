# GameForge Database Configuration Template
# Copy this file to .env.database and update values for your environment
# DO NOT commit .env.database to version control

# Database Connection
DATABASE_URL=postgresql://gameforge_user:securepassword@localhost:5432/gameforge_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gameforge_dev
DB_USER=gameforge_user
DB_PASSWORD=securepassword

# Connection Pool Settings
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# SSL Settings (Development)
DB_SSL_MODE=prefer
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=
DB_SSL_CA_PATH=

# Query and Performance Settings
DB_ECHO=false
DB_QUERY_TIMEOUT=30
DB_STATEMENT_TIMEOUT=60000

# Migrations
MIGRATE_URL=postgresql://gameforge_user:securepassword@localhost:5432/gameforge_dev
MIGRATE_AUTO_RUN=false

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=
BACKUP_S3_PREFIX=gameforge-backups/

# Monitoring and Logging
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=1000

# Security
DB_ENCRYPT_AT_REST=false
DB_AUDIT_ENABLED=true
DB_MAX_CONNECTIONS_PER_USER=10

# Development Settings
DB_RESET_ON_STARTUP=false
DB_SEED_DATA=true
DB_DEBUG_MODE=false