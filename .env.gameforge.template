# GameForge Database Environment Configuration
# Copy this to your GameForge-2.0 project .env file

# ==============================================
# Database Configuration
# ==============================================

# Primary database connection (for SQLAlchemy in database.py)
DATABASE_URL=postgresql+asyncpg://gameforge_user:gameforge_secure_password_2024@localhost:5432/gameforge_dev

# Fallback sync connection (for migrations)  
DATABASE_SYNC_URL=postgresql://gameforge_user:gameforge_secure_password_2024@localhost:5432/gameforge_dev

# Database connection details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gameforge_dev
POSTGRES_USER=gameforge_user
POSTGRES_PASSWORD=gameforge_secure_password_2024

# Production database (when deploying)
PROD_DATABASE_URL=postgresql+asyncpg://gameforge_user:PRODUCTION_PASSWORD@your-prod-host:5432/gameforge_prod

# ==============================================
# Authentication & Security
# ==============================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-make-it-very-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_MAX_AGE_SECONDS=86400

# ==============================================
# Storage Configuration
# ==============================================

# Local Storage (Development)
STORAGE_PROVIDER=local
STORAGE_PATH=/app/storage
MAX_FILE_SIZE_MB=500

# AWS S3 (Production)
# STORAGE_PROVIDER=aws_s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET=gameforge-assets
# AWS_REGION=us-east-1

# Azure Blob Storage (Alternative)
# STORAGE_PROVIDER=azure_blob
# AZURE_STORAGE_ACCOUNT=your-storage-account
# AZURE_STORAGE_KEY=your-storage-key
# AZURE_CONTAINER=gameforge-assets

# ==============================================
# Security & Encryption
# ==============================================

# Encryption keys (Vault integration)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
ENCRYPTION_KEY_ID=gameforge-encryption-key

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# Application Configuration
# ==============================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_CREDENTIALS=true

# ==============================================
# Data Classification & Compliance
# ==============================================

# GDPR/CCPA Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DEFAULT_DAYS=2555

# PCI DSS (if handling payments)
PCI_DSS_ENABLED=false

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO

# ==============================================
# Performance & Monitoring
# ==============================================

# Database Connection Pool
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_RECYCLE=3600

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# ==============================================
# Development Tools
# ==============================================

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@gameforge.local
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=8080

# Migration Settings
MIGRATION_AUTO_APPLY=false
MIGRATION_BACKUP_ENABLED=true

# ==============================================
# Frontend Integration
# ==============================================

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:3000

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload Configuration
UPLOAD_MAX_SIZE_MB=100
UPLOAD_ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "pdf", "zip", "tar", "gz"]

# ==============================================
# Security Headers
# ==============================================

# Content Security Policy
CSP_ENABLED=true
SECURE_HEADERS_ENABLED=true

# HTTPS Configuration (Production)
HTTPS_REDIRECT=false
SECURE_COOKIES=false

# ==============================================
# Background Tasks
# ==============================================

# Celery Configuration (if using background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Task Queue Configuration
TASK_QUEUE_ENABLED=false
TASK_RETRY_DELAY_SECONDS=300